%ul.ticket-list
  - current_order.items.each do |item|
    %li= render item
- unless @donations.empty?
  - @donations.each do |donation|
    = render :partial => 'donations/form', :locals => { :target => donation }
= link_to "Clear Cart", order_path(current_order, :format => :widget), :method => :delete, :confirm => 'Are you sure?' unless current_order.empty?