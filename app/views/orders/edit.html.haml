%h3 Ticket Order
%h4 Enter Payment Details

%ul.line-items
  - @order.tickets.each do |ticket|
    %li
      = render :partial => 'tickets/line_item', :object => ticket
  %li.total
    = "Total: $#{@order.total}"

- unless @needs_confirmation
  = render "shared/error_messages", :target => @payment
  = form_for @order do |f|
    = render :partial => 'payments/form', :locals => {:payment => @payment}
- else
  Confirm your order!

= link_to "Cancel Order", order_path(@order), :method => :delete, :confirm => 'Are you sure?'
