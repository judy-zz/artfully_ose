%h3 Ticket Order
%h4 Enter Payment Details

= render "shared/error_messages", :target => @payment
= render "shared/error_messages", :target => @payment.customer
= render "shared/error_messages", :target => @payment.credit_card
= render "shared/error_messages", :target => @payment.billing_address

%ul.line-items
  - @order.tickets.each do |ticket|
    %li
      = render :partial => 'athena_tickets/line_item', :object => ticket
  %li.total
    = "Total: $#{@order.total}"

= form_for @order do |f|
  - if @needs_confirmation
    = hidden_field_tag :confirmation, 1
    = render @payment.customer
    = render @payment.credit_card
    = render @payment.billing_address
    = render :partial => 'orders/save_customer'

  = render :partial => 'athena_payments/form', :locals => {:payment => @payment}

= link_to "Cancel Order", order_path(@order), :method => :delete, :confirm => 'Are you sure?'
