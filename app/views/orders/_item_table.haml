= javascript_include_tag "grouped-form"

- unless order.items.empty?
  = render :partial => 'refunds/grouped_form', :locals => { :order => order }
  = render :partial => 'exchanges/grouped_form', :locals => { :order => order }
  #items.grouped-form-target
    = form_tag do
      %table.zebra
        %thead
          %tr
            %th.grouped-checkbox= check_box_tag :all, nil, false, :class => :checkall
            %th Type
            %th Description
            %th Price
        %tbody
          - order.all_items.each do |item|
            %tr{:id => "row_item_#{item.id}", :class => item.state }
              %td.grouped-checkbox= check_box_tag :all, nil, false, :disabled => true
              %td Ticket
              %td= link_to "#{item.item.event}", event_path(item.item.event_id)
              %td= number_as_cents item.price
