- content_for :controls do
  #total.centered
    %div Your total is
    .price= number_as_cents current_cart.total
    %div= "You have #{pluralize(current_cart.items.size, "item")}"
  #checkout-now.centered
    -unless current_cart.items.empty?
      = link_to("Checkout Now", new_store_checkout_path, :class => 'btn btn-primary btn-large')
      
  #clear-cart.centered
    -unless current_cart.empty?
      = link_to "Clear My Cart", store_order_path(current_cart), :method => :delete, :confirm => 'Are you sure you want to empty your cart?'

%table.table
  - current_cart.tickets.each do |ticket|
    %tr.ticket= render ticket
  - if current_cart.fee_in_cents > 0
    %tr.ticket
      %td.item.fee= "Service fee"
      %td.price= number_as_cents current_cart.fee_in_cents
  - current_cart.donations.each do |donation|
    %tr.donation= render donation

- unless @donations.empty?
  - @donations.each do |donation|
    = render :partial => 'store/donations/form', :locals => { :target => donation }

#shopping-cart.hidden
  #shopping-cart-controls
  %span.cart-name Shopping Cart