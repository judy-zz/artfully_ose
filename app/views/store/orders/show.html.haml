- content_for :controls do
  #total
    %span Your total is
    .price= number_as_cents current_order.total
    %span= "You have #{pluralize(current_order.items.size, "item")}"
  #checkout-now= link_to "Checkout Now", new_store_checkout_path unless current_order.items.empty?
  #clear-cart= link_to "Clear My Cart", store_order_path(current_order), :method => :delete, :confirm => 'Are you sure you want to empty your cart?' unless current_order.empty?

%ul.item-list
  - current_order.purchasable_tickets.each do |ticket|
    %li.ticket= render ticket
  - if current_order.fee_in_cents > 0
    %li.ticket
      %span.price= number_as_cents current_order.fee_in_cents
      %span.item= "Ticket fees, $2 per ticket"
  - current_order.donations.each do |donation|
    %li.donation= render donation

- unless @donations.empty?
  - @donations.each do |donation|
    = render :partial => 'store/donations/form', :locals => { :target => donation }
