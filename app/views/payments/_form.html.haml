= form_for :payment, edit_order_url(@order) do |payment_form|
  %h3 Customer Information
  = render :partial => 'customers/form', :locals => { :parent_form => payment_form, :target => @payment.customer }

  %h3 Credit Card Information
  = render :partial => 'credit_cards/form', :locals => { :parent_form => payment_form, :target => @payment.credit_card }

  %h3 Billing Address
  = render :partial => 'addresses/form', :locals => { :parent_form => payment_form, :target => @payment.billing_address, :address_type => :billing_address }

  %h3 Shipping Address
  = render :partial => 'addresses/form', :locals => { :parent_form => payment_form, :target => @payment.shipping_address, :address_type => :shipping_address }

  = payment_form.submit "Purchase"
