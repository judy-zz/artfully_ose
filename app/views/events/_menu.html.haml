.nav.nav-accordian
  %li= link_to 'Overview', event_path(@event)
  %li.accordian.active
    = link_to 'Details', edit_event_path(@event)
    %ul.accordian-menu
      %li= link_to 'About', edit_event_path(@event)
      %li= link_to 'Venue', edit_event_venue_path(@event)
      %li= link_to 'Prices', prices_event_path(@event)
      %li= link_to 'Image', image_event_path(@event)
      %li= link_to 'Messages'
  %li.accordian.active
    = link_to 'Shows', event_shows_path(@event)
    %ul.accordian-menu
      %li
        %a{:href => new_event_show_path(@event), :class => 'btn'}
          %i.icon-plus-sign
          New
      - @event.shows.each do |show|
        =link_to show.datetime_local_to_event, event_show_path(@event, show)

  %li.accordian.active
    = link_to 'Share & Sell'
    %ul.accordian-menu
      %li= link_to 'Storefront', storefront_link_event_path(@event)
      %li= link_to 'On Your Site', widget_event_path(@event)
      %li= link_to 'Box Office'