- content_for :header do
  %h1= "#{@event.name} at #{@event.venue}"
  %h2= "#{@event.producer}: #{@event.city}, #{@event.state}"

= contextual_menu do |m|
  - m.item_to "Events", events_path, :title => "Events", :icon => "icons/light/Gear.png"
  - m.item_to "New Event", new_event_path, :title => "New Event", :icon => "icons/light/Writing.png"
  - m.item_to "Edit Event", edit_event_path(@event), :icon => "icons/light/Wrench.png"
  - m.item_to "New Performance", new_event_performance_path(@event), :icon => "icons/light/Media-Player.png"
.clearboth

= render :partial => 'events/performances', :locals => { :event => @event, :performance=>@performance }

.clearboth

%h2 Charts
.templateContainer
  .one_half.column{:style=>'margin-right:2%'}
    .portlet2
      .portlet-header
        Import chart
      .portlet-content
        = render :partial => 'events/chart_selector', :locals => { :event=> @event, :chart=>@chart, :charts => @charts }
  .one_half.column{:style=>'margin-right:2%'}
    - @event.charts.each do |c|
      = render :partial => 'events/chart', :locals => { :chart => c }
  .clearboth
%h2 Widget
%textarea= render :partial => 'widgets/event', :locals => { :event => @event }