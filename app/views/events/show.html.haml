- in_section :events
- content_for :header do
  %h1= link_to @event.name, event_path(@event)
  %h2
    = @event.producer
    &mdash;
    = "#{@event.venue} #{@event.city}, #{@event.state}"
  %ul.from-here
    %li= link_to "Edit", edit_event_path(@event)
    %li= link_to "New Performance", new_event_performance_path(@event)
    %li= link_to "All Performances", event_performances_path(@event)

.context
  = render :partial => "glance", :locals => { :report => @event.glance }
  = render :partial => "performances/upcoming", :locals => { :event => @event, :upcoming => @upcoming }

  %h3 Charts
  %ul.detailed-list
    - @event.charts.each do |chart|
      %li
        %h4= chart.name
        %ul.details
          %li= pluralize(chart.sections.size, "Section")

.document
  #this-week
    %h3 This Week
    #calendar

  #widget
    %h3 Promote on your Website
    %p= "Click #{link_to 'here', widget_event_path(@event)} for instructions on installing the widget on your own site.".html_safe