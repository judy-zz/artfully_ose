- content_for :header do
  %h1 Ticketing &amp; Events

.context
  %h3 Events
  - unless @events.blank?
    %ul.detailed-list
      - @events.each do |event|
        %li
          %h4= link_to event.name, event_path(event), :title => 'event-name'
          %ul.details
            %li= event.venue
            %li= event.producer

.document
  .call-to-action
    = button_to "New Event", new_event_path, :method => :get
  %h3 Ticketing Dashboard