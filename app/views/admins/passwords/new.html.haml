= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
  %h3 Forgot your password?
  = devise_error_messages!
  %ul
    %li
      .label
        = f.label :email
      .element
        = f.text_field :email
        .description= link_to "I don't have an account yet!", new_registration_path(resource_name) if User.ancestors.include? Devise::Models::Registerable
  = f.submit "Send Instructions"