= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
  %h3 Forgot your password?
  = devise_error_messages!
  .control-group
    = f.label :email
    .controls
      = f.text_field :email
  .form-actions
    = f.submit "Send Instructions", :class => "btn"
