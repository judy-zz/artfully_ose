= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  %h3 Sign In
  .control-group
  = f.label :email
  .controls
    = f.text_field :email, :tabindex => "1"
  .control-group
  = f.label :password
  .controls
    = f.password_field :password, :tabindex => "2"
    .description= link_to "Request unlock instructions?", new_unlock_path(resource_name)
    .description= link_to "Forgot your password?", new_password_path(resource_name)
  
  .form-actions
    = f.submit "Sign in", :tabindex => "3", :class => "btn"
