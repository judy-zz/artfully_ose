= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  %h3 Sign In
  %ul
    %li
      .label= f.label :email
      .element
        = f.text_field :email, :tabindex => "1"
        .description= link_to "I don't have an account yet!", new_registration_path(resource_name) if User.ancestors.include? Devise::Models::Registerable
    %li
      .label= f.label :password
      .element
        = f.password_field :password, :tabindex => "2"
        .description= link_to "Forgot your password?", new_password_path(resource_name)
  = f.submit "Sign in", :tabindex => "3"
