%ul.people-list
  - if people.empty?
    %p No results found
  - else
    - people.each do |person|
      %li
        .name= link_to "#{person.first_name} #{person.last_name}", person_url(person)
        .email= person.email
    - if params[:search].present?
      = form_for(Segment.new(:terms => params[:search]), :url => new_segment_path, :html => {:method => :get}) do |form|
        = form.hidden_field :terms
        = form.submit "New List Segment"