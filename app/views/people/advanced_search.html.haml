- in_section :people
- content_for :header do
  %h1 People

.row
  .span4
    = form_tag people_path, {:method => :get, :remote => true, :class => 'form-vertical'} do
      = hidden_field_tag :commit, "Search"
      = label_tag :event, "Event"
      = text_field_tag :event, "", :placeholder => "Romeo and Juliet"
      = label_tag :donations_min, "Total Donations"
      .control
        .input-prepend
          %span.add-on $
          = text_field_tag :donations_min, "", :placeholder => "Minimum", :class => "input-small"
        to
        .input-prepend
          %span.add-on $
          = text_field_tag :donations_max, "", :placeholder => "Maximum", :class => "input-small"
      = date_field_tag :donations_min_date, "", :class => "input-small"
      to
      = date_field_tag :donations_max_date, "", :class => "input-small"
      = label_tag :lifetime_value, "Lifetime Value (Tix Sales and Donations)"
      .control
        .input-prepend
          %span.add-on $
          = text_field_tag :donations_min, "", :placeholder => "Minimum", :class => "input-small"
        to
        .input-prepend
          %span.add-on $
          = text_field_tag :donations_max, "", :placeholder => "Maximum", :class => "input-small"
      = label_tag :zipcode, "Location"
      = number_field_tag :zipcode, "", in: 10000..99999, :placeholder => "Zipcode", :class => "input-small"
      = text_field_tag :state, "", :placeholder => "State", :class => "input-small"
      .control
        = submit_tag "Search", :class => 'btn'
        = link_to "Simple Search", people_path
  .span8.super-search-results
    - unless @people.empty?
      = render :partial => 'list', :locals => { :people => @people } unless @people.empty?
      = will_paginate @people, :inner_window => 2, :outer_window => 0 unless @people.empty?
