- in_section :people

-content_for :header do
  %h1 Edit Contact

.spread
  = form_for @person, :url => person_path(@person) do |form|
    %ul
      = render :partial => 'people/form', :locals => { :parent_form => form, :target => @person }
      %li= form.submit "Save"

  =button_to "Cancel", person_path(@person), :method => :get