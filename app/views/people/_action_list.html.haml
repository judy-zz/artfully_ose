%table.zebra.sortedstar#action-list
  %thead
    %tr
      %th.starred &#10029;
      %th Date Occurred
      %th Type
      %th Details
      %th
  %tbody
    - if person.actions.empty?
      %tr
        %td
        %td{:colspan=>5}
          No actions for this person
    - else
      - (person.starred_actions + person.unstarred_actions ).each do |action|
        = render :partial=>'action_list_row', :locals => { :person => person, :action => action }

:javascript
$(document).bind('zebra sortedstar', function(){
    $('#action-list').dataTable({
        "iDisplayLength": 10,
        "bPaginate": true,
        "bJQueryUI": true,
        "sDom": '<"H"lfip>t<"F"ip>',
        "aoColumns": [
        null,
        null,
        null,
        null,
        null
        ]
    });
});