%h1 People
%h2 Find and manage important relationships with people

.context
  %h3="#{@person.first_name} #{@person.last_name}"

  %ul.kv
    %li
      .key Nickname
      .value Gary
    %li
      .key Salutation
      .value Mr. Moore
    %li
      .key Donor Listing
      .value Anonymous

  %h4 Contact Information
  %ul.kv
    %li
      .key Email
      .value=@person.email
    %li
      .key Cell
      .value 555-555-1234
    %li
      .key Home
      .value 555-555-3245
    %li
      .key Twitter
      .value gmoore
    %li
      .key LinkedIn
      .value /gmoore

.document
  %h3 Actions

  #actions
    .table-controls
      %input.filter{ :type => :text, :value => "Filter" }
    =render :partial=>'action_list', :locals => { :person => @person }