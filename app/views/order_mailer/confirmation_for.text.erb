Thank you for your order <%= @person.first_name %> <%= @person.last_name %>!

Order number: <%= @order.id %>
Purchase Date: <%= l DateTime.now %>
Order total: <%= format("%.2f", (@order.total/100.0)) %>

<% unless @order.tickets.empty? %>
  Tickets
  <% @order.tickets.each do |ticket| %>
    - <%= "$#{format("%.2f", (ticket.price/100.0))}: #{ticket.event} at #{l ticket.performance, :format => :date_at_time}" %>
  <% end %>
<% end %>

<% unless @order.donations.empty? %>
  Donations
  <% @order.donations.each do |donation| %>
    - <%= "$#{format("%.2f", (donation.amount/100.00))} donation to #{donation.organization.name}" %>
  <% end %>
<% end %>