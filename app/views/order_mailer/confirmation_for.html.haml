%h3="Thank you for your order #{@person.first_name} #{@person.last_name}!"

%h5= "Order number: #{@order.id}"
%h5= "Purchase Date: #{l(@order.created_at)}"
%h5= "Order total: $#{format("%.2f", (@order.total/100.0))}"
%h5= "Service fee: $#{format("%.2f", (@order.service_fee.to_i/100.0))}"

- unless @order.tickets.empty?
  %h4 Tickets
  %ul.ticket-list
    - @order.tickets.each do |item|
      - ticket = item.product
      %li
        %span.price= "$#{format("%.2f", (ticket.price/100.0))}:"
        %span.name= "#{ticket.event} on #{l ticket.datetime, :format => :date_at_time}"

- unless @order.donations.empty?
  %h4 Donations
  %ul.donation-list
    - @order.donations.each do |item|
      - donation = item.product
      %li
        %span.price= "$#{format("%.2f", (donation.amount/100.00))}:"
        %span.name= "Donation to #{donation.organization.name_for_donations}"
