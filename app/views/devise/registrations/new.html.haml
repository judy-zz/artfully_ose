= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  %h3 Sign Up
  =devise_error_messages!
  %ul
    %li
      .label
        = f.label :email
      .element
        = f.text_field :email
    %li
      .label
        = f.label :password
      .element
        = f.password_field :password
    %li
      .label
        = f.label :password_confirmation
      .element
        = f.password_field :password_confirmation
    %li
      = f.submit "Sign up"
      