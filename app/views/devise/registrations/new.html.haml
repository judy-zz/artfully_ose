= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  %h3 Sign Up
  = devise_error_messages!
  %ul
    %li
      .label= f.label :email
      .element= f.text_field :email
    %li
      .label= f.label :password
      .element= f.password_field :password
    %li
      .label= f.label :password_confirmation
      .element= f.password_field :password_confirmation
    %li
      .label
        %h4= "I have read, understand and accept the terms and conditions of the "
        %h4= link_to "User Agreement", page_path("user_agreement"), :target => "_blank"
      .element= f.check_box :user_agreement

    %li
      = f.submit "Sign up"
