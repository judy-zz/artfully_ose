- in_section :imports

- content_for :header do
  %h1= t(".heading", :default => "Imports / Exports")

.compact-spread

  %h3 Imports
  %ul.detailed-list
    - @imports.each do |import|
      %li
        %h4= link_to File.basename(import.s3_key), import_path(import)
        %ul.details-long
          %li= describe_import_status import
  %p
    %h4= link_to "Upload a new file to import", new_import_path

  %br

  %h3 Exports
  %ul.detailed-list
    %li
      %h4= link_to "Export all people currently in Artful.ly", people_path(:export => :all, :format => :csv)
