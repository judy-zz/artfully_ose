- in_section :imports
- content_for :header do
  %h1 Imports / Exports

.row

  .span12

    %h3 Imports
    %ul.detailed-list
      - @imports.each do |import|
        %li
          %h4= link_to File.basename(import.s3_key), import_path(import)
          %ul.details-long
            %li= describe_import_status import
    %p= link_to "Upload a new file to import", new_import_path, :class => "btn"

    %br

    %h3 Exports
    %p= link_to "Export all people currently in Artful.ly", contacts_export_index_path, :class => "btn"
    %p= link_to "Export all donations currently in Artful.ly", donations_export_index_path, :class => "btn"
    %p= link_to "Export all ticket sales currently in Artful.ly", ticket_sales_export_index_path, :class => "btn"
