- in_section :events
- content_for :header do
  %h1= t('.heading', :default => "Reseller Events")

.context

  %h3 Your Events

  %p= t('.events', :default => "Your events will appear here.")

.document

  - if @reseller_events.blank?
    = link_to "Create an Event", new_organization_reseller_event_path(@organization), :class => 'cta-left-125'
  - else
    %ul.detailed-list
      - @reseller_events.each do |event|
        %li
          %h4= link_to event.name, organization_reseller_event_path(@organization, event), :name => 'event-name'
          %ul.details-long
            %li
              .key Venue
              .value= "#{event.venue.name} #{event.venue.city}, #{event.venue.state}"
            %li
              .key Description
              .value= event.description
      %li= link_to "Create an Event", new_organization_reseller_event_path(@organization), :class => 'cta-left-125'

  .clearfix

  - if @reselling_offers.present?
    %h3 Shows You Are Reselling
    %ul.detailed-list
      - @reselling_offers.each do |offer|
        %li
          %h4= link_to offer.event.name, store_event_path(offer.event), :name => 'event-name'
          %ul.details-long
            %li
              .key Date &amp; Time
              .value= I18n.l(offer.show.datetime_local_to_event, :format => :long_with_day)
            %li
              .key Venue
              .value= offer.event.venue.name
            %li
              .key Description
              .value= offer.event.description

- content_for :custom_js do

  = javascript_include_tag "splash/fancybox/jquery.fancybox-1.3.4.pack.js"

  :javascript

    $(function () {
      $("a.popup-image").fancybox();
    });
