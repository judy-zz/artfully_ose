= form_for @payment, :url => edit_order_url(@order) do |payment_form|
  %h3 Customer Information
  = render :partial => 'athena/customers/form', :locals => { :parent_form => payment_form, :target => @payment.customer }

  %h3 Credit Card Information
  = render :partial => 'athena/credit_cards/form', :locals => { :parent_form => payment_form, :target => @payment.credit_card }

  %h3 Billing Address
  = render :partial => 'athena/payments/addresses/form', :locals => { :parent_form => payment_form, :target => @payment.billing_address, :address_type => :billing_address }

  = payment_form.submit "Purchase"
