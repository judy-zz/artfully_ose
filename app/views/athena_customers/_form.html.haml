= parent_form.fields_for target do |customer_form|
  %ul
    %li
      .label= label_tag "", "First & Last Name"
      .hidden.label= customer_form.label :first_name, "First Name"
      .hidden.label= customer_form.label :last_name, "Last Name"
      .double.element
        = customer_form.text_field :first_name
        = customer_form.text_field :last_name
    %li
      .label= customer_form.label :phone, "Phone"
      .element= customer_form.text_field :phone
    %li
      .label= customer_form.label :email, "Email"
      .element= customer_form.text_field :email
