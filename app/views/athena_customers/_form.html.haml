= parent_form.fields_for target do |customer_form|
  %ul
    %li
      .label= label_tag "", "First & Last Name"
      .hidden.label= customer_form.label :first_name, "First Name"
      .hidden.label= customer_form.label :last_name, "Last Name"
      .double.element
        = customer_form.text_field :first_name
        = customer_form.text_field :last_name
        = customer_form.error_message_on(:first_name, :prepend_text => "First name ", :css_class => "form-error")
        = customer_form.error_message_on(:last_name, :prepend_text => "Last name ", :css_class => "form-error")
    %li
      .label= customer_form.label :phone, "Phone"
      .element
        = customer_form.text_field :phone
        = customer_form.error_message_on(:phone, :prepend_text => "Phone ", :css_class => "form-error")
    %li
      .label= customer_form.label :email, "Email"
      .element
        = customer_form.text_field :email
        = customer_form.error_message_on(:email, :prepend_text => "Email  ", :css_class => "form-error")
