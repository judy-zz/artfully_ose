- content_for :header do
  %h1 New Settlement

.context
  %h3
  = form_tag admin_settlements_path do
    = hidden_field_tag :show_id, @show.id
    = submit_tag "Submit new settlement"
  %h3 Info
  %ul.kv
    %li
      .key Organization
      .value= link_to @show.organization.name, organization_path(@show.organization)
    %li
      .key Event
      .value= @show.event.name
    %li
      .key Show
      .value= l @show.datetime

.document
  %h3 Bank Account
  - if @show.organization.bank_account.nil?
    %p This organization has no bank account information
    = link_to "Add a Bank Account", new_admin_organization_bank_account_path(@show.organization)
  - else
    %ul.kv
      %li
        .key Routing Number
        .value= @show.organization.bank_account.routing_number

      %li
        .key Number
        .value= @show.organization.bank_account.number

      %li
        .key Account Type
        .value= @show.organization.bank_account.account_type

      %li
        .key Name
        .value= @show.organization.bank_account.name

      %li
        .key Address
        .value= @show.organization.bank_account.address

      %li
        .key City
        .value= @show.organization.bank_account.city

      %li
        .key State
        .value= @show.organization.bank_account.state

      %li
        .key Zip
        .value= @show.organization.bank_account.zip

      %li
        .key Phone
        .value= @show.organization.bank_account.phone
    = link_to "Edit Bank Account", edit_admin_organization_bank_account_path(@show.organization)
  %h3 Items
  - if @show.settleables.any?
    %ul
      %table.zebra.standalone
        %thead
          %tr
            %th Event
            %th Show
            %th Price
        %tbody
          - @show.settleables.each do |item|
            %tr
              %td= link_to "#{item.product.event}", event_path(item.product.event_id)
              %td= link_to "#{l item.product.show}", event_show_path(item.product.event_id, item.product.show_id)
              %td= number_as_cents item.price
  -else
    %p There are no items to settle.