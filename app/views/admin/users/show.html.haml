- content_for :header do
  %h1 User Administration
  %h2= @user.email

.context
.document
  #organizations
    %h3 Organizations
    - if @user.organizations.any?
      %table.standalone
        %thead
          %tr
            %th Name
            %th Created Date
        %tbody
          - @user.organizations.each do |organization|
            %tr
              %td= link_to organization.name, organization
              %td= l organization.created_at, :format => :short
    - else
      %p User is not part of any organizations.