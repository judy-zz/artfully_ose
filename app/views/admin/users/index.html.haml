- content_for :header do
  %h1 User Administration

.context
  = link_to "Invite User", new_admin_user_path
.document
  = form_tag admin_users_path, :method => :get do
    %ul
      %li
        .label
          = label_tag :email, "Email"
        .element
          = text_field_tag :email
          .description Start by finding a user by email address.
        = submit_tag "Search"
  %h2 All Users
  %table
    %thead
      %tr
        %th="Email"
        %th="Org"
        %th="Sign ins"
        %th="Last sign in"
        %th
    %tbody
      - @users.each do |user|
        %tr
          %td=link_to user.email, admin_user_path(user)
          %td
            - user.memberships.each do |m|
              =link_to m.organization.name, admin_organization_path(m.organization)
          %td=user.sign_in_count
          %td= user.last_sign_in_at
          %td= button_to "Sign in", sessions_admin_user_path(user)