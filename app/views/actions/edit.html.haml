.spread
  = form_for @action, :url => person_action_path(@person, @action) do |form|
    %ul
      - if request[:format] == "HEAR"
        = render :partial => 'actions/form_hear', :locals => { :parent_form => form, :target => @action }

      = hidden_field_tag "action_type", request[:format]
      %li= form.submit "Save"