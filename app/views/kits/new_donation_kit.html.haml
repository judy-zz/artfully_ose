:javascript
  $(document).ready(
    function(){
        $('#d1').hide();
        $('#d2').hide();
        $('#d3').hide();
        $('input:radio[name=donation_type]').change(
            function(){
                if ($(this).val()=="501c3") {
                    $('#d1').show();
                }else {
                    $('#d1').hide();
                }

                if ($(this).val()== "fafs") {
                    $('#d2').show();
                } else {
                    $('#d2').hide();
                }

                if ($(this).val()== "none") {
                    $('#d3').show();
                }
                else {
                    $('#d3').hide();
                }
            }
            );
    });