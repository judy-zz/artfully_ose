- in_section :events
- content_for :header do
  %h1 Hide this Show
  %h2 Remove this show from the widget

.spread
  %h3= @performance.event.name
  %h4= l(@performance.datetime)
  %p= "You are hiding the #{l @performance.datetime} showing of #{@performance.event.name}."

  = form_tag unpublished_event_shows_path(@performance.event) do |form|
    = hidden_field_tag :confirm, :true
    = hidden_field_tag :show_id, @performance.id
    %p If this is correct, please click confirm it by clicking
    = submit_tag "Unpublish"

  %p
    If this is not correct,
    = link_to "cancel this action and return to the show page", event_show_url(@performance.event, @performance)