- in_section :events
- content_for :header do
  %h1 Tickets & Events
  %h2= "Door List for #{l @performance.datetime, :format => :long_with_day} performance of #{@performance.event.name} at #{@performance.event.venue}"

  %ul.from-here
    %li= link_to_function("Toggle Printable View", "javascript:togglePrintPreview()", :class => 'button_link')

.document
  %h3= "Tickets (as of #{l @current_time})"
  - unless @door_list.items.empty?
    #door-list
      %table#door-list.tablesorter.standalone
        %thead
          %tr
            %th
            %th Buyer
            %th Email
            %th Section
            %th Price
        %tbody
          - @door_list.items.each do |item|
            %tr
              %td= "‚òê"
              %td= "#{item.buyer.last_name}, #{item.buyer.first_name}"
              %td= item.buyer.email
              %td= item.ticket.section
              %td= number_as_cents(item.ticket.price)

