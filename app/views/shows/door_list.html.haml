- in_section :events
- content_for :header do
  %h1 Tickets & Events
  %h2= "Door List for #{l @show.datetime_local_to_event, :format => :long_with_day} show of #{@show.event.name} at #{@show.event.venue.name}"

  %ul.from-here
    %li= link_to_function("Toggle Printable View", "javascript:togglePrintPreview()", :class => 'button_link')

.spread
  %h3= "Tickets (as of #{l @current_time})"
  - unless @door_list.items.empty?
    #door-list
      %table#door-list.standalone
        %thead
          %tr
            %th
            %th Buyer
            %th Email
            %th Section
            %th Price
        %tbody
          - @door_list.items.each do |item|
            %tr
              %td= "‚òê"
              %td= "#{item.buyer.first_name} #{item.buyer.last_name}"
              %td= item.buyer.email
              %td= item.ticket.section.name
              %td= number_as_cents(item.ticket.price)

