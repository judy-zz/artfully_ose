%h1.page-title= t(".heading", :default => "Updates")

.row
  .span7
    -@posts.each do |post|
      .post
        %h4=link_to post[:title], post[:link], :target => '_blank'
        %h6= post[:byline]
        = simple_format post[:entry].gsub('Read More »', '').gsub("\n","\n\n"), :class => 'blog'
        %p
          = link_to 'Read More »', post[:link], :target => '_blank'

  .span4.offset1
    .icon
      = image_tag('pages/envelope.png', :class => 'icon')
    .sub-text
      = t(".subheading", :default => "")

    .twitter
      <a class="twitter-timeline" data-dnt=true href="https://twitter.com/artfullyhq" data-widget-id="244142550657671170">Tweets by @artfullyhq</a>
      <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>

.row
  %p=link_to t(".link-to-blog", :default => "All Artful.ly posts on the Fractured Atlas Blog »"), 'http://www.fracturedatlas.org/site/blog/tag/artfully/'

