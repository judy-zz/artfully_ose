%h1.page-title= t(".heading", :default => "Updates")

.row
  .span8
    -@posts.each do |post|
      .post
        %h4=link_to post[:title], post[:link], :target => '_blank'
        %h6= post[:byline]
        = simple_format post[:entry].gsub('Read More »', '').gsub("\n","\n\n"), :class => 'blog'
        %p
          = link_to 'Read More »', post[:link], :target => '_blank'

  .span4
    .icon
      = image_tag('pages/envelope.png', :class => 'icon')
    .sub-text
      = t(".subheading", :default => "")

    .twitter
      :javascript
        $(document).ready(function(){
          $.getScript('http://widgets.twimg.com/j/2/widget.js', function () {
            new TWTR.Widget({
            version: 2,
            type: 'profile',
            rpp: 5,
            interval: 30000,
            id: 'twitter-widget',
            width: 280,
            height: 200,
            theme: {
              shell: {
                background: 'transparent',
                color: '#333'
              },
              tweets: {
                background: 'transparent',
                color: '#333',
                links: '#007ca6'
              }
            },
            features: {
              scrollbar: false,
              loop: false,
              live: false,
              behavior: 'all'
            }
          }).render().setUser('artfullyhq').start();
          });
        })
      #twitter-widget.twitter-widget
        &nbsp;
      %p.twitter-follow-button
        %a.twitter-follow-button{:href => "https://twitter.com/artfullyhq", 'data-show-count' => 'false'}Follow @artfullyhq
        = javascript_include_tag 'http://platform.twitter.com/widgets.js'

.row
  %p=link_to t(".link-to-blog", :default => "All Artful.ly posts on the Fractured Atlas Blog »"), 'http://www.fracturedatlas.org/site/blog/tag/artfully/'

