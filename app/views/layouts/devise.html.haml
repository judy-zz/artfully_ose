!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
  %head
    %title= "#{yield :title} : Artful.ly"
    %link{ :rel => "shortcut icon", :href => "/favicon.ico", :type => "image/x-icon"}

    = include_stylesheets :application, :vendor, :media => :screen
    = include_stylesheets :printing, :media => :print
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Raleway:100'
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Arimo:regular,italic,bold"
    = csrf_meta_tag

  %body
    #large-header
      %img{ :src => '/images/logo.png' }
    #content
      = render :partial => 'layouts/flash.html', :locals => { :flash => flash }
      - flash.discard
      = yield
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.5.2/jquery.js"
    = include_javascripts :vendor, :application, :custom

