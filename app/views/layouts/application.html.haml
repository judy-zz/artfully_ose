!!!
%html
  %head
    %title
      = "#{yield :title} : Artful.ly"
    = stylesheet_link_tag "reset", "application", "forms"
    = javascript_include_tag :defaults
    = csrf_meta_tag

  %body
    #page
      #header
        #session_nav
          - if user_signed_in?
            = "Signed in as #{current_user.email}. Not you?"
            = link_to "Sign out", destroy_user_session_path
          - else
            = link_to "Sign up", new_user_registration_path
            or
            = link_to "sign in", new_user_session_path
        %h1= link_to "Artful.ly", root_path
      %ul#menu
        %li= link_to "Home", root_path
        %li= link_to "Tickets", tickets_path
        %li= link_to "Performances", performances_path if can? :manage, Performance
      #content
        = flash[:notice]
        = flash[:error]
        = flash[:alert]
        = yield
