!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
  %head
    %title= "#{yield :title} : Artful.ly"
    = favicon_link_tag
    = include_stylesheets :vendor, :media => :screen
    = include_stylesheets :application, :media => :screen
    = include_stylesheets :printing, :media => :print
    = csrf_meta_tag
    = render :partial => 'layouts/google_analytics'
  %body
    = render :partial => 'layouts/menu'
    .container
      #heading= yield :header
      = render :partial => 'layouts/flash.html', :locals => { :flash => flash }
      - flash.discard
      = content_for?(:menu_sub_template) ? yield(:menu_sub_template) : yield
      = render 'layouts/footer'

    = include_javascripts :jquery
    = include_javascripts :bootstrap
    = render :partial => "shared/help_tab"
    = render :partial => "shared/feedback_footer"
    = include_javascripts :vendor, :application, :custom
    = yield :custom_js
