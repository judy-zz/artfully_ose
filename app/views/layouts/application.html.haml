!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
  %head
    %title= "#{yield :title} : Artful.ly"
    = favicon_link_tag
    = stylesheet_link_tag "https://asset0.zendesk.com/external/zenbox/v2.4/zenbox.css"
    = include_stylesheets :application, :media => :screen
    = include_stylesheets :printing, :media => :print
    = csrf_meta_tag
    = render :partial => 'layouts/google_analytics'
  %body
    = render :partial => 'layouts/menu'
    .container
      #heading= yield :header
      = render :partial => 'layouts/flash.html', :locals => { :flash => flash }
      - flash.discard
      = yield
      %footer.footer
        %ul.nav
          %li= link_to 'Updates', updates_path
          %li= link_to 'Privacy Policy', privacy_path
          %li= link_to 'Terms of Use', tou_path
          %li= link_to 'User Agreement', user_agreement_path
    = javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.js"
    = include_javascripts :bootstrap
    /= include_javascripts :vendor, :application, :custom
    = yield :custom_js
