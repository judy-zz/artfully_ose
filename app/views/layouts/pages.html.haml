!!! 5
%html{:lang => 'en'}
  %head
    %meta{:charset => 'utf-8'}

    %title Artful.ly
    = favicon_link_tag
    :css
      /* jammit will break this if its in a .css file */
      @font-face {
        font-family: 'Harabara';
        src: url('/assets/pages/Harabara.eot');
        src: url('/assets/pages/Harabara.eot?#iefix') format('embedded-opentype'),
             url('/assets/pages/Harabara.woff') format('woff'),
             url('/assets/pages/Harabara.ttf') format('truetype'),
             url('/assets/pages/Harabara.svg#') format('svg');
        font-weight: normal;
        font-style: normal;
      }
    = stylesheet_link_tag :bootstrap, :application, "pages/pages"
    = javascript_include_tag :application, :pages
    = render :partial => 'layouts/google_analytics'
    :javascript
      $(document).ready(function() {
        $('p:not(.blog)').widowFix();
      });

  %body
    - if user_signed_in?
      = render :partial => 'layouts/menu'
    - else
      .navbar.navbar-fixed-top
        .navbar-inner
          .container
            = link_to 'Artful.ly', root_url, :class => 'brand'
            %ul.nav.pull-right
              = active_link_to 'FAQ', faq_path
              = active_link_to 'Pricing', pricing_path
              = active_link_to 'Features', features_path
              = active_link_to 'Updates', updates_path
              = active_link_to 'Open Source', opensource_path
              = active_link_to 'Contact', contact_path
              %li= link_to 'Sign Up', sign_up_path, :class => 'btn primary'
              = active_link_to 'Sign in', new_user_session_path
    .container
      =yield
      = render 'layouts/footer'
