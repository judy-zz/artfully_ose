- form_for @performance do |f|
  = f.label :title
  = f.text_field :title
  %br
  = f.label :venue
  = f.text_field :venue
  %br
  = f.label :performed_on, "Performance Date"
  = f.datetime_select :performed_on
  %br
  = label_tag :seats, "Seats"
  = text_field_tag :seats
  %br
  = label_tag :price, "Price"
  = text_field_tag :price
  %br
  = f.submit "Save"
