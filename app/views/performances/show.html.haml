- content_for :header do
  %h1= l @performance.datetime, :format => :long_with_day
  %h2= "#{@event.name} at #{@event.venue}"

= contextual_menu do |m|
  - m.item_to "Event", event_path(@event), :title => "New Event", :icon => "icons/light/Gear.png"
  - m.item_to "Edit", edit_performance_path(@performance), :icon => "icons/light/Writing.png"
  - m.item_to "Duplicate", duplicate_performance_path(@performance), :icon => "icons/light/Scanner.png"
  - m.item_to "Put on Sale", put_performance_on_sale_path(@performance) unless @performance.on_sale?
  - m.item_to "Take off Sale", take_performance_off_sale_path(@performance) if @performance.on_sale?
  - m.item_to "Door List", door_list_performance_path(@performance) if @performance.has_door_list?

.clearboth

.three_fourth.column
  - if @performance.pending?
    %p You have not created tickets for this event.
    %p= link_to "Create tickets now", create_tickets_for_performance_path(@performance), :class=>"link"
  - else
    = form_for @performance, :url => bulk_edit_performance_tickets_path(@performance) do |form|
      %ul.action-list
        %li= submit_tag "Put on Sale"
        %li= submit_tag "Take off Sale"
        %li= submit_tag "Delete"
    = form_for @performance, :url => comp_ticket_people_path(@performance) do |form|
      = submit_tag "Comp"
      =render :partial => 'ticket_table', :locals => { :performance => @performance }
.one_fourth.column.last
  .stats
    =render :partial => 'stat', :locals => {:label=>'TICKETS', :value=>@performance.tickets.size}
    =render :partial => 'stat', :locals => {:label=>'SOLD', :value=>@performance.tickets_sold.size}
    =render :partial => 'stat', :locals => {:label=>'GROSS POTENTIAL', :value=>(number_as_cents @performance.gross_potential)}
    =render :partial => 'stat', :locals => {:label=>'GROSS SALES', :value=>(number_as_cents @performance.gross_sales)}
.clearboth
