- in_section :events
- content_for :header do
  %h1 Ticketing &amp; Events
  %h2= "Door List for #{l @performance.datetime, :format => :long_with_day}"

.context
  %h3 Print Preview
  = link_to_function("Toggle Printable View", "javascript:togglePrintPreview()", :class => 'button_link')
.document
  %h3 Tickets
  - unless @door_list.items.empty?
    #door-list
      %table#door-list.tablesorter.standalone
        %thead
          %tr
            %th Buyer
            %th Email
            %th Ticket
        %tbody
          - @door_list.items.each do |item|
            %tr
              %td= "#{item.buyer.first_name} #{item.buyer.last_name}"
              %td= item.buyer.email
              %td= number_as_cents(item.ticket.price)

