- content_for :header do
  %h1= "Door List for #{l @performance.datetime, :format => :long_with_day}"

= contextual_menu do |m|
  - m.item_to "Event", event_path(@performance.event), :title => "New Event", :icon => "icons/light/Gear.png"
  - m.item_to "Performance", performance_path(@performance), :title => "View Performance", :icon => "icons/light/Gear.png"
  - m.item_to "Edit", edit_performance_path(@performance), :icon => "icons/light/Writing.png"
  - m.item_to "Duplicate", duplicate_performance_path(@performance), :icon => "icons/light/Scanner.png"
  - m.item_to "Add to Widget", put_performance_on_sale_path(@performance) unless @performance.on_sale?
  - m.item_to "Remove from Widget", take_performance_off_sale_path(@performance) if @performance.on_sale?

.clearboth
= link_to_function("Toggle Printable View", "javascript:togglePrintPreview()", :class => 'button_link')

- unless @door_list.items.empty?
  %table#door-list.normal.tablesorter.fullwidth
    %thead
      %tr
        %th Buyer
        %th Email
        %th Ticket
    %tbody
      - @door_list.items.each do |item|
        %tr
          %td= "#{item.buyer.first_name} #{item.buyer.last_name}"
          %td= "#{item.buyer.email}"
          %td= number_as_cents item.ticket.price
