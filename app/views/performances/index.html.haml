- in_section :events
- content_for :header do
  %h1= link_to @event.name, event_path(@event)
  %h2
    = @event.producer
    &mdash;
    = "#{@event.venue} #{@event.city}, #{@event.state}"
  %ul.from-here
    %li= link_to "New Performance", new_event_performance_path(@event)
    %li= link_to "All Performances", event_performances_path(@event)


.context
  %h3 Upcoming Performances
  = render :partial => "upcoming", :locals => { :event => @event, :upcoming => @upcoming }

.document
  = render :partial => "glance", :locals => { :report => @event.glance }
  %h3 All Performances
  #performances
    %table.standalone.zebra
      %thead
        %tr
          %th Performance
          %th Available
          %th Sold
          %th Comped
          %th Gross
          %th Actions
      %tbody
        - @performances.each do |performance|
          %tr{ :class => performance.state }
            %td= link_to l(performance.datetime, :format => :short), event_performance_path(@event,performance), :title => 'performance-datetime'
            %td= performance.glance.tickets.available
            %td= performance.glance.tickets.sold.gross
            %td= performance.glance.tickets.sold.comped
            %td= number_as_cents(performance.glance.revenue.total_sales.gross)
            %td= render :partial => "controls", :locals => { :performance => performance }
    = will_paginate @performances
