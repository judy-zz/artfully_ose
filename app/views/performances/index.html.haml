- in_section :events
- content_for :header do
  %h1= link_to @event.name, event_path(@event)
  %h2
    = @event.producer
    &mdash;
    = "#{@event.venue} #{@event.city}, #{@event.state}"
  %ul.from-here
    %li= link_to "New Performance", new_event_performance_path(@event)
    %li= link_to "All Performances", event_performances_path(@event)


.context
  %h3 Upcoming Performances
  = render :partial => "upcoming", :locals => { :event => @event, :upcoming => @upcoming }

.document
  = render :partial => "glance", :locals => { :report => @event.glance }
  %h3 All Performances
  #performances
    %ul.performance-list
      - @performances.each do |performance|
        %li
          %h6= link_to l(performance.datetime, :format => :short), event_performance_path(@event,performance), :title => 'performance-datetime'
          - if performance.pending?
            = form_tag create_tickets_for_performance_path(performance) do
              = submit_tag "Create Tickets", :class => [ :mini, :full ]
          - if performance.built?
            = form_tag event_performance_path(@event, performance) do
              = submit_tag "Put On Sale", :class => [ :mini, :full ]
          - if performance.off_sale?
            = form_tag on_sale_event_performances_path(performance.event) do
              = hidden_field_tag :performance_id, performance.id
              = submit_tag "Show", :class => [ :mini, :half ]
          - if performance.on_sale?
            = form_tag off_sale_event_performances_path(performance.event) do
              = hidden_field_tag :performance_id, performance.id
              = submit_tag "Hide", :class => [ :mini, :half ]
          / = link_to "&#9660;".html_safe, "#"
          / .hidden-stats
          /   = render :partial => "stats", :locals => { :performance => performance }
      %li.new-item
        = render :partial => 'performances/new_performance_for_table', :locals => { :event => @event, :performance => @performance }
    = will_paginate @performances