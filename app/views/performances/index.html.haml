- in_section :events
- content_for :header do
  %h1= link_to @event.name, event_path(@event)
  %h2
    = @event.producer
    &mdash;
    = "#{@event.venue} #{@event.city}, #{@event.state}"
  %ul.from-here
    %li= link_to "New Performance", new_event_performance_path(@event)
    %li= link_to "All Performances", event_performances_path(@event)


.context
  = render :partial => "glance", :locals => { :report => @event.glance }
  %h3 Upcoming Performances
  = render :partial => "upcoming", :locals => { :event => @event, :upcoming => @upcoming }

.document
  %h3 All Performances
  #performances
    %table.standalone.zebra
      %thead
        %tr
          %th Performance
          %th Available
          %th Sold
          %th Comped
          %th Actions
      %tbody
        - @performances.each do |perf|
          %tr{ :class => perf.state }
            %td= link_to l(perf.datetime, :format => :short), event_performance_path(@event, perf), :title => 'performance-datetime'
            %td.available= perf.glance.tickets.available
            %td.gross= perf.glance.tickets.sold.gross
            %td.comped= perf.glance.tickets.sold.comped
            %td= render :partial => "controls", :locals => { :performance => perf }
        %tr
          = render :partial => 'performances/new_performance_for_table', :locals => { :event => @event, :performance => @next_performance }
    = will_paginate @performances
