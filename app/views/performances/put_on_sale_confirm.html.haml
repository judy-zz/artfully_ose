- content_for :header do
  %h1 Put on Sale
%p= "You are putting all tickets on sale for the #{l @performance.datetime.in_time_zone(@performance.event.time_zone)} performance of #{@performance.event.name}"

= form_for @performance, :url => put_performance_on_sale_path(@performance) do |form|
  =hidden_field_tag :confirm, :true
  %p If this is correct, please click confirm it by clicking
  =submit_tag "Put on Sale"

%p
  If this is not correct,
  = link_to "cancel this action and return to the performance page", performance_url(@performance)