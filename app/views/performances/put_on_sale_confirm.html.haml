- in_section :events
- content_for :header do
  %h1 Put on Sale
  %h2 Add this performance to the widget

.context
.document
  %p= "You are adding #{l @performance.datetime} performance of #{@performance.event.name} to the widget."

  = form_for @performance, :url => put_on_sale_event_performance_path(@performance.event, @performance) do |form|
    = hidden_field_tag :confirm, :true
    %p If this is correct, please click confirm it by clicking
    = submit_tag "Put on Sale in the Widget"

  %p
    If this is not correct,
    = link_to "cancel this action and return to the performance page", event_performance_url(@performance.event, @performance)