= form_for performance, :url => event_performances_path(event, performance) do |f|
  - performance.datetime = performance.datetime.in_time_zone(performance.time_zone)
  = f.text_field :datetime, { :value => performance.datetime.to_date.strftime("%m/%d/%Y") }

  = f.time_select :datetime, {:size=>'3'}
  - default_chart_id_as_s = performance.chart_id.nil? ? nil : performance.chart_id.to_s

  = f.select :chart_id, options_from_collection_for_select(event.charts, "id", "name", default_chart_id_as_s)
  = f.submit "Submit"