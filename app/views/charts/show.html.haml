- in_section :events
- content_for :header do
  %h1 Chart Templates
  %h2= @chart.name
  %ul.from-here
    %li= link_to "Copy chart", chart_copy_path(@chart)
    %li= link_to "New Section", new_chart_section_path(@chart)


.context
  %h3 Charts
  %ul.detailed-list
    - @charts.each do |chart|
      %li
        %h4= chart.name
        %ul.controls
          %li= link_to "View", chart_path(chart) if can?(:view, chart)
          %li= link_to "Edit", edit_chart_path(chart) if can?(:edit, chart)
          %li= link_to "Copy", chart_copy_path(chart) if can?(:view, chart)
          %li= link_to "Delete", chart_path(chart), :method=>:delete if can?(:delete, chart)
        %ul.details
          %li= pluralize(chart.sections.size, "Section")

.document
  %h3= "#{@chart.name} Sections"
  = render :partial => 'sections/section_table', :locals => { :chart => @chart, :include_link => true }

