- content_for :header do
  %h1= @chart.name
  %ul.dash
    %li
      =link_to charts_path do
        = image_tag "icons/dashboard/1.png"
        %span Charts
    %li
      =link_to new_chart_path do
        = image_tag "icons/dashboard/2.png"
        %span New Chart


=link_to "Edit this chart", edit_chart_path(@chart), :class => "link"

%h2 Sections
%table.normal
  %thead
    %tr
      %th Name
      %th Seats
      %th Price
      %th Actions
  %tbody
    - @chart.sections.each do |section|
      %tr
        %td= section.name
        %td= "#{section.capacity} seats"
        %td= "$#{section.price}"
        %td
          =link_to image_tag('icons/actions_small/Pencil.png'), edit_chart_section_path(@chart, section), :class => "table_icon"
          =link_to image_tag('icons/actions_small/Trash.png'), chart_section_path(@chart, section), :method=>:delete, :class => "table_icon"

=link_to "Add a section to this chart", new_chart_section_path(@chart), :class => "link"