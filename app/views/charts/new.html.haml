- content_for :header do
  %h1 New Chart


.context

.document
  = render "shared/error_messages", :target => @chart
  = form_for @chart, :url => charts_path(@chart) do |form|
    %ul
      = render :partial => 'charts/form', :locals => { :parent_form => form, :target => @chart }
      %li= form.submit "Submit"