- in_section :events
- content_for :header do
  %h1 Chart Templates
  /TODO
  %h2 Missing subtitle
  %ul.from-here
    %li= link_to "New Chart", new_chart_path

.context
  %h3 Charts
  %ul.detailed-list
    - @charts.each do |chart|
      %li
        %h4= chart.name
        %ul.details
          %li= pluralize(chart.sections.size, "Section")

.document
  %h3 Charts
  - if @charts.empty?
    %p You have not created any chart templates.
    = link_to "Create chart template", new_chart_path, :class => :cta

  %ul.detailed-list
    - @charts.each do |chart|
      %li
        %h4= chart.name
        %ul.controls
          %li= link_to "View", chart_path(chart) if can?(:view, chart)
          %li= link_to "Edit", edit_chart_path(chart) if can?(:edit, chart)
          %li= link_to "Copy", chart_copy_path(chart) if can?(:view, chart)
          %li= link_to "Delete", chart_path(chart), :method=>:delete if can?(:delete, chart)
