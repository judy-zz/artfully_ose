- content_for :header do
  %h1 Chart Templates

.context
  %h3 Charts
  %ul.detailed-list
    - @charts.each do |chart|
      %li
        %h4= chart.name
        %ul.details
          %li= pluralize(chart.sections.size, "Section")

.document
  .call-to-action
    = link_to "New Chart", new_chart_path, :title => "New Chart", :icon => "icons/light/Writing.png"
  %h3 Charts
  - if @charts.empty?
    %p You have not created any chart templates.

  %ul.detailed-list
    - @charts.each do |chart|
      %li
        %h4= chart.name
        %ul.details
          %li= link_to "view", chart_path(chart) if can?(:view, chart)
          %li= link_to "edit", edit_chart_path(chart) if can?(:edit, chart)
          %li= link_to "delete", chart_path(chart), :method=>:delete if can?(:delete, chart)
