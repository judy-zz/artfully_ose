-content_for :header do
  %h1 Ticketing and Events

.context
.document
  %p
    = "Are you sure you want to comp #{pluralize(@selected_tickets.size, 'ticket')}"
    = " to \"#{@athena_person.first_name} #{@athena_person.last_name}\""
    = " for the #{l @performance.datetime, :format=> :date_at_time} performance"
    = " of #{@performance.event.name}?"
  %p= "Reason for comp is: #{@reason_for_comp}"
  = form_for @performance, :url => comp_confirm_performance_tickets_path(@performance) do |form|
    = hidden_field_tag :confirmed, :true
    - @selected_tickets.each do |st|
      =hidden_field_tag "selected_tickets[]", st
    = hidden_field_tag :person_id, @athena_person.id
    = hidden_field_tag :reason_for_comp, @reason_for_comp
    %p If this is correct, please click confirm it by clicking
    = submit_tag "Confirm"

  %p= link_to "Cancel Ticket Comp", event_performance_path(@performance.event, @performance)