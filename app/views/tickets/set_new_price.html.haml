- in_section :events
- content_for :header do
  %h1 Set new price

.context
.document
  %p
    = "You have selected the following #{pluralize @selected_tickets.count, "tickets"} to reprice:"

  #section
  %ul.kv
    -@grouped_tickets.each do |section|
      %li
        %p
          %ul.kv
          -section.each do |section_name, prices|
            %h2= section_name
            -prices.each do |price_group|
              -price_group.each do |price|
                %li
                  %p
                    %h2= "#{pluralize price[1], "ticket"} at #{number_as_cents price[0]} each"

  #form
  =form_tag update_prices_performance_tickets_path, :method => :put do
    %ul
      %li
        .label= label_tag :price, "Price"
        .element= text_field_tag :price, '', :class => :currency, :size => 1
    - @selected_tickets.each do |st|
      = hidden_field_tag "selected_tickets[]", st
    = submit_tag "Submit"
  %p
    =link_to "cancel", :back