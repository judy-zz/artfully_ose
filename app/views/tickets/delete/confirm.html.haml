- in_section :events
- content_for :header do
  %h1 Delete

.spread
  %p= "You are about to delete #{pluralize(@selected_tickets.size, 'ticket')} for the #{l @performance.datetime } performance of #{@performance.event.name}."

  = form_tag delete_show_tickets_path, :method => :delete do
    = hidden_field_tag :confirmed, :true
    - @selected_tickets.each do |st|
      = hidden_field_tag "selected_tickets[]", st
    %p If this is correct, please click confirm it by clicking
    = submit_tag "Delete"

  %p
    If this is not correct,
    = link_to "cancel this action and return to the performance page", event_show_url(@performance.event, @performance)