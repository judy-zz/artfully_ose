= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  %h3 Sign Up
  = devise_error_messages!
  %ul
    %li
      .label= f.label :email
      .element= f.text_field :email
    %li
      .label= f.label :password
      .element= f.password_field :password
    %li
      .label= f.label :password_confirmation, "Retype Password"
      .element= f.password_field :password_confirmation
    %li
      .label{:style => "float:left"}= f.label :user_agreement, "User Agreement"
      .element
        = f.check_box :user_agreement
        .description= "I have read, understand and accept the terms and conditions of the #{link_to "User Agreement", page_path("user_agreement"), :target => "_blank"}".html_safe

    %li
      = f.submit "Sign up"
