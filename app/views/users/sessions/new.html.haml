= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-horizontal"}) do |f|
  %h3 Sign In
  %ul
    %li
      = f.label :email, :class=>'control-label'
      .controls
        = f.text_field :email, :tabindex => "1"
        %p.help-block= link_to "I don't have an account yet!", new_registration_path(resource_name) if User.ancestors.include? Devise::Models::Registerable
    %li
      = f.label :password, :class=>'control-label'
      .controls
        = f.password_field :password, :tabindex => "2"
        .description= link_to "Forgot your password?", new_password_path(resource_name)
  = f.submit "Sign in", :tabindex => "3"
