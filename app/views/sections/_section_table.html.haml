#chart_sections
  %table.standalone
    %thead
      %tr
        %th Name/Description
        %th Seats
        %th Price
        - if (editable ||= false)
          %th Actions
    %tbody
      - if chart.sections.empty?
        %tr
        - if include_link
          %td{:colspan=>'4'}= "There are no sections in this seat chart, #{link_to('create one now', new_chart_section_path(chart))}.".html_safe
        - else
          %td{:colspan=>'4'} There are no sections in this seat chart.
      -else
        - chart.sections.each do |section|
          %tr
            %td
              = section.name
              %br/
              = section.description
            %td= "#{section.capacity}"
            %td= number_as_cents section.price
            
            - if (editable ||= false)
              %td
                = link_to "Edit", edit_chart_section_path(chart, section) if can?(:edit, chart)
                = link_to "Delete", chart_section_path(chart, section), :confirm => "Are you sure you want to remove #{section.name}?", :method => :delete if can?(:delete, @chart)
