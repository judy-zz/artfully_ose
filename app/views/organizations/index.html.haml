- in_section :dashboard
- content_for :header do
  %h1 Organizations

.context
.document
  .call-to-action
    - if !current_user.is_in_organization?
      = link_to "New Organization", new_organization_path
  %h3 My Organization
  #organizations
    .table-controls
    %table
      %thead
        %tr
          %th Name
          %th Created Date
      %tbody
        - @organizations.each do |organization|
          %tr
            %td= link_to organization.name, organization
            %td= l organization.created_at, :format => :short