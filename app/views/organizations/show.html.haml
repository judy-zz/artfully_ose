- in_section :dashboard
- content_for :header do
  %h1= @organization.name

%ul.kv
  %li.row-fluid
    .key.span2 Email
    .value.span6{'data-content' => "Your patrons will be able to respond to this email address when receiving ticket/donation receipts. You can change this at any time."}= @organization.email
  %li.row-fluid
    .key.span2 Time Zone
    .value.span6= @organization.time_zone
    
- if can? :manage, current_user.current_organization
  = link_to "Edit", edit_organization_path(@organization), {:class => "btn"}

#organization-details.row
  #memberships.span12
    = render :partial => "memberships/list", :locals => { :organization => @organization }