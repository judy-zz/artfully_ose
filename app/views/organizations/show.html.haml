- in_section :dashboard
- content_for :header do
  %h1= @organization.name

%ul.kv
  - unless @organization.legal_organization_name.blank?
    %li.row-fluid
      .key.span2 Legal Name
      .value.span6= @organization.legal_organization_name
  - unless @organization.ein.blank?
    %li.row-fluid
      .key.span2 EIN
      .value.span6= @organization.ein
  %li.row-fluid
    .key.span2 Time Zone
    .value.span6= @organization.time_zone
  -unless @organization.connected?
    %li.row-fluid
      .key.span2 Fractured Atlas
      .value.span6= link_to "connect now", "#faForm", 'data-toggle' => 'modal'
  -else
    %li.row-fluid
      .key.span2 Fractured Atlas
      .value.span6 Connected
    -if @organization.has_active_fiscally_sponsored_project?
      %li.row-fluid
        .key.span2 Project
        .value.span6= @organization.fiscally_sponsored_project.name || "&nbsp;".html_safe 
      %li.row-fluid
        .key.span2 Website
        .value.span6= @organization.fiscally_sponsored_project.website || "&nbsp;".html_safe
      %li.row-fluid
        .key.span2 Status
        .value.span6= @organization.fiscally_sponsored_project.status || "&nbsp;".html_safe
    
= link_to "Edit", edit_organization_path(@organization), :class => "btn"

#organization-details.row
  #kits.span4
    %h2 Kits
    = render :partial => "kits/list", :locals => { :kits => @kits }

  #memberships.span8
    %h2 Users
    = render :partial => "memberships/list", :locals => { :organization => @organization }
    

#faForm.modal{:style => 'display:none'}
  .modal-header
    .close{'data-dismiss'=>'modal'} x
    %h3 Connect to Fractured Atlas
  .modal-body
    = render :partial => 'connection_form', :locals => { :organization => @organization, :fa_user => @fa_user }